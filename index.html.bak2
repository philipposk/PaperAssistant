  </script>
  
  <script>
    // File Explorer for Homepage
    function initFileExplorerForHomepage() {
      const sidebar = document.getElementById('fileExplorerSidebar');
      if (!sidebar) {
        console.warn('File explorer sidebar not found on homepage');
        return;
      }
      
      // Toggle sidebar
      sidebar.classList.toggle('open');
      document.body.classList.toggle('sidebar-open');
      
      // If opening and tree is empty, show message
      if (sidebar.classList.contains('open')) {
        const tree = sidebar.querySelector('#fileTree');
        if (tree && tree.innerHTML.trim() === '') {
          tree.innerHTML = `
            <li style="padding: 1rem; color: var(--text-secondary);">
              <p>üìÅ File Explorer</p>
              <p style="font-size: 0.85rem; margin-top: 0.5rem;">
                Full file explorer is available on the <a href="paper_progression.html" style="color: var(--accent); text-decoration: underline;">Paper Progression</a> page.
              </p>
              <p style="font-size: 0.85rem; margin-top: 0.5rem;">
                Or use the file explorer button in the unified navigation header.
              </p>
            </li>
          `;
        }
      }
    }
    
    // Make available globally
    window.initFileExplorerForHomepage = initFileExplorerForHomepage;
    
    // Modal functions
    function showProfileModal() {
      // Remove any existing modals
      document.querySelectorAll('.about-modal').forEach(m => m.remove());
      
      const modal = document.createElement('div');
      modal.className = 'about-modal';
      modal.style.display = 'flex';
      modal.innerHTML = `
        <div class="about-modal-content" style="max-width: 600px;">
          <div class="about-modal-header">
            <h3>üë§ Profile & About</h3>
            <span class="about-modal-close" onclick="this.closest('.about-modal').classList.remove('show'); setTimeout(() => this.closest('.about-modal').remove(), 200)">√ó</span>
          </div>
          <div class="about-modal-body">
            <p>Profile and About information will be displayed here.</p>
            ${typeof window.showUserProfile === 'function' 
              ? '<button onclick="window.showUserProfile(); this.closest(\'.about-modal\').remove();" class="btn-modern btn-modern-primary">Open Full Profile</button>'
              : typeof window.openAboutModal === 'function'
              ? '<button onclick="window.openAboutModal(); this.closest(\'.about-modal\').remove();" class="btn-modern btn-modern-primary">Open About</button>'
              : ''
            }
          </div>
        </div>
      `;
      document.body.appendChild(modal);
      setTimeout(() => modal.classList.add('show'), 10);
      
      modal.onclick = (e) => {
        if (e.target === modal) {
          modal.classList.remove('show');
          setTimeout(() => modal.remove(), 200);
        }
      };
      
      const escapeHandler = (e) => {
        if (e.key === 'Escape') {
          modal.classList.remove('show');
          setTimeout(() => modal.remove(), 200);
          document.removeEventListener('keydown', escapeHandler);
        }
      };
      document.addEventListener('keydown', escapeHandler);
    }
    
