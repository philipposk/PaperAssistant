    // Initialize on load
    document.addEventListener('DOMContentLoaded', function() {
      // Load projects
      if (typeof loadProjects === 'function') {
        loadProjects();
      }
      
      // Update view mode buttons
      const viewMode = localStorage.getItem('projectViewMode') || 'list';
      document.querySelectorAll('.view-mode-btn').forEach(btn => {
        if (btn.getAttribute('data-mode') === viewMode) {
          btn.classList.add('active');
        } else {
          btn.classList.remove('active');
        }
      });
      
      // Load user if available
      if (typeof window.loadUser === 'function') {
        window.loadUser();
      }
    });
    
    // Override setViewMode to update UI
    const originalSetViewMode = window.setViewMode;
    window.setViewMode = function(mode) {
      if (originalSetViewMode) originalSetViewMode(mode);
      
      // Update button states
      document.querySelectorAll('.view-mode-btn').forEach(btn => {
        if (btn.getAttribute('data-mode') === mode) {
          btn.classList.add('active');
        } else {
          btn.classList.remove('active');
        }
      });
    };
    
    // Add stub functions for features that need HTML elements
    // These create minimal functionality or redirect gracefully
    if (typeof window.openSettings === 'undefined') {
      window.openSettings = function() {
        // Use the existing showSettingsModal function
        if (typeof showSettingsModal === 'function') {
          showSettingsModal();
        } else {
          alert('Settings functionality is available on the Paper Progression page.');
        }
      };
    }
    
    if (typeof window.toggleSearch === 'undefined') {
      window.toggleSearch = function() {
        // Create a simple search prompt
        const query = prompt('Search (full search available on Paper Progression page):');
        if (query) {
          // Simple redirect to paper_progression with search
          window.location.href = 'paper_progression.html#search=' + encodeURIComponent(query);
        }
      };
    }
    
    if (typeof window.toggleTimerWidget === 'undefined') {
      window.toggleTimerWidget = function() {
        // Redirect to paper_progression for timer
        window.location.href = 'paper_progression.html';
      };
    }
  </script>
