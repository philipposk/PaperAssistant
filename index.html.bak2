  <script>
    // Initialize file explorer if functions are available
    if (typeof window.toggleFileExplorer === 'function' && typeof window.buildFileTree === 'function') {
      // File explorer will be initialized when opened
    } else {
      // Load file explorer functions from paper_progression if needed
      // For now, show a message
      const sidebar = document.getElementById('fileExplorerSidebar');
      if (sidebar) {
        const tree = document.getElementById('fileTree');
        if (tree) {
          tree.innerHTML = '<li style="padding: 1rem; color: var(--text-secondary);">File explorer functions not loaded. Please refresh the page.</li>';
        }
